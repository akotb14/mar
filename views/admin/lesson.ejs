      <div class="main">
        <div class="topbar">
          <div class="toggle">
            <ion-icon name="menu-outline"></ion-icon>
          </div>
        </div>
        <div class="container1">
          <div class="admin-Category-form-container">
            <form enctype="multipart/form-data" method="post">
              <h3>add details</h3>

             <select name="educetionlevel">
                <option
                  name="educetionlevel"
                  value=""
                  class="placeholder"
                  disabled
                  selected
                  hidden
                >
                Specialization
                </option>
                <option name="educetionlevel" value="biology">Biology</option>
                <option name="educetionlevel" value="geology">Geology</option>
              </select>
              <br />
              <br />
              <br />
              <select name="grade">
                <option
                  name="grade"
                  value=""
                  class="placeholder"
                  disabled
                  selected
                  hidden
                >
                  Grade
                </option>
                <option name="grade" value="1st">1st</option>
                <option name="grade" value="2nd">2nd</option>
                <option name="grade" value="3rd">3rd</option>
              </select>

              <br />
              <br />
              <br />
              <select name="month">
                <option
                  name="month"
                  value=""
                  class="placeholder"
                  disabled
                  selected
                  hidden
                >
                  Month
                </option>
                <option name="month" value="الشهر الاول">الشهر الاول</option>
                <option name="month" value="الشهر الثاني">الشهر الثاني</option>
                <option name="month" value="الشهر الثالث">الشهر الثالث</option>
                <option name="month" value="الشهر الرابع">الشهر الرابع</option>
                <option name="month" value="الشهر الخامس">الشهر الخامس</option>
                <option name="month" value="الشهر السادس">الشهر السادس</option>
                <option name="month" value="الشهر السابع">الشهر السابع</option>
                <option name="month" value="الشهر الثامن">الشهر الثامن</option>
                <option name="month" value="الشهر التاسع">الشهر التاسع</option>
                <option name="month" value="الشهر العاشر">الشهر العاشر</option>

                <option name="month" value="الشهر الاول الترم الثاني">الشهر الاول الترم الثاني</option>
                <option name="month" value="الشهر الثاني الترم الثاني">الشهر الثاني الترم الثاني</option>
                <option name="month" value="الشهر الثالث الترم الثاني">الشهر الثالث الترم الثاني</option>
                <option name="month" value="الشهر الرابع الترم الثاني">الشهر الرابع الترم الثاني</option>
                <option name="month" value="الشهر الخامس الترم الثاني">الشهر الخامس الترم الثاني</option>
                <option name="month" value="الشهر السادس الترم الثاني">الشهر السادس الترم الثاني</option>
                <option name="month" value="الشهر السابع الترم الثاني">الشهر السابع الترم الثاني</option>
                <option name="month" value="الشهر الثامن الترم الثاني">الشهر الثامن الترم الثاني</option>
                <option name="month" value="الشهر التاسع الترم الثاني">الشهر التاسع الترم الثاني</option>
                <option name="month" value="الشهر العاشر الترم الثاني">الشهر العاشر الترم الثاني</option>
              </select>
              <br />
              <br />
              <br />
              <input
                type="text"
                placeholder="enter lesson"
                class="box"
                name="unit"
              />
              <input
                type="text"
                placeholder="enter link video"
                name="lesson"
                class="box"
              />
              <input type="file" name="pdf" class="box" />
              <input type="submit" class="btn" value="add lesson" />
            </form>
          </div>

          <div class="Category-display">
            <table class="Category-display-table">
              <thead>
                <tr>
                  <th>level</th>
                  <th>grade</th>
                  <th>month</th>
                  <th>unit</th>
                  <th>Action</th>
                </tr>
              </thead>
              <%for(i of lesson){%> <%for(j of i.units){%>
              <tr>
                <td><%=i.educetionlevel%></td>
                <td><%=i.grade%></td>
                <td><%=j.month%></td>
                <td><%=j.unit%></td>
                <td>
                  <a
                    style="
                      background-color: brown;
                      border-radius: 0.5rem;
                      padding: 0.5rem 0.5rem;
                      color: var(--white);
                    "
                    href="/removelesson/<%=i._id%>/<%=j._id%>"
                    >delete</a
                  >
                </td>
              </tr>
              <%}%> <%}%>
            </table>
          </div>

<!DOCTYPE html>
<html>
  <head>
    <title>كوين الاحياء والچيولوچيا</title>
    <link rel="icon" type="image/png" href="/assets/images/logo.png" />
    <link rel="stylesheet" href="../../show answer/style.css" />
  </head>

  <body oncontextmenu="return false;">
    <% if(!checkCount){ %> 
    <div class="quizContainer container-fluid well well-lg">
      <div id="quiz1" class="text-center">
        <h2
          style="color: #d14040; position: center; left: 80%; top: 0%"
          align="Center"
        >
           الاسئله
          <br />
        </h2>
       
      </div>
      <% for(let i =0;i< quiz['homeId']['quiz'].length ; i++){ %> 
      <div class="quiz-container">
        
        
          <% if(quiz.homeId['quiz'][i]['image'] !="" && quiz.homeId['quiz'][i]['image'] != undefined){ %> 
            <div style="margin-bottom: 30px;">
              <% let image = ""%>
                <%image = quiz.homeId['quiz'][i]['image'].split('\\')[1] || quiz.homeId['quiz'][i]['image'].split('/')[1] %>
              <img src="/<%=image %> " alt="sa" width="400px">
            </div>
            <% } %> 
            <div class="question-number" style="display: flex;
            justify-content: flex-end;
            ">
       
          <h3>
            <%=(i+1) %>.<%=quiz['homeId']['quiz'][i]['question'] %>  <span class="question-num-value"></span>
          </h3>
        </div>
        <br />
        <br />
        <br />
        <section>
          <form method="Post" >
          <%for(j of quiz['homeId']['quiz'][i].answer[0] ) {%> 
          <div class="options">
           
              <% if(j != "" ){ %> 
                
            <div class="options" > <input
              type="radio"
              name="answer<%=i%>" 
              value="<%=j%>" 
            /> <%=j%> </div>
            <% } %> 
          

          </div>
          <% } %> 
          <% if(i == (quiz['homeId']['quiz'].length -1)){ %> 
            <div class="options" style="background-color: white;
            display: flex;
            padding: 5px;
         
            margin: 0;" >
                       

              <button style="background-color: brown; padding:12px 25px; color:white; border-radius: 5px; border: white none 0;">انتهاء</button>
            </form>
              </div>
            <% } %> 
        </section> 
        
      </div>
      <% } %> 
      <% }else{%>
        <h2> you can not enter homework again</h2>
      <%} %> 
      <script>
        document.onkeydown = function (e) {
          if (event.keyCode == 123) {
            return false;
          }
          if (e.ctrlKey && e.shiftKey && e.keyCode == "I".charCodeAt(0)) {
            return false;
          }
          if (e.ctrlKey && e.shiftKey && e.keyCode == "J".charCodeAt(0)) {
            return false;
          }
          if (e.ctrlKey && e.keyCode == "U".charCodeAt(0)) {
            return false;
          }
        };
      </script>
      <script src="../../show answer/script.js"></script>
    </div>
  </body>
</html>
